<%- include('./partials/adminpanel-layout') %>
<main style="margin-top: 58px;">
    <div class="container bg-light" style="width: 100%; height: 600px;"  >

        <section class="vh-100 gradient-custom">
            <div class="container py-5 h-100">
              <div class="row justify-content-center align-items-center h-100">
                <div class="col-12 col-lg-9 col-xl-7">
                  <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                    <div class="card-body p-4 p-md-5">
                      <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">UPDATE CUSTOMER</h3>
                      <form action="/admin/customer/update/<%= cusDetails._id %>" method="post">
          
                        <div class="row">
                          <div class="col-md-6 mb-4">
          
                            <div class="form-outline">
                              <input type="text" name="fname" id="firstName" placeholder="First Name" class="form-control form-control-lg " value="<%= cusDetails.fname %>" />
                              
                            </div>
          
                          </div>
                          <div class="col-md-6 mb-4">
          
                            <div class="form-outline">
                              <input type="text" name="lname" id="lastName" placeholder="Last Name" class="form-control form-control-lg" value="<%= cusDetails.lname %>" />
                          
                            </div>
          
                          </div>
                        </div>
          
                       
          
                        <div class="row">
                          <div class="col-md-6 mb-4 pb-2">
          
                            <div class="form-outline">
                              <input type="email" name="email" id="emailAddress" placeholder="Email" class="form-control form-control-lg" value="<%= cusDetails.email %>" />
                            </div>
          
                          </div>
                          <div class="col-md-6 mb-4 pb-2">
          
                            <div class="form-outline">
                              <input type="password" name="password" id="phoneNumber" placeholder="Password" class="form-control form-control-lg" value="<%= cusDetails.password %>"  />
                              
                            </div>
          
                          </div>
                        </div>
          
                     
                        <div class="mt-4 pt-2">
                          <input class="btn btn-dark btn-lg" type="submit" value="Submit" />
                        </div>
          
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </section>
    
      
  

    
    </div>
   
  </main>