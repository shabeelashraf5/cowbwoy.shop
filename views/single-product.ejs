<%- include('./partials/lsheader') %>
<%- include('./partials/header') %>

<div class="container bg-light " style="width: 100%; height: auto; margin-top: 120px;"  >
   
    <nav class="navbar bg-body-tertiary">
        <div class="container-fluid">
        
          <a class="navbar-brand" href="/"><h6>HOME</h6></a> 
        <a class="navbar-brand me-auto" href=""><h6>> <%= singleProduct.title %></h6></a>
       
        </div>
      </nav>


      <div class="container text-center">
        <div class="row row-cols-2">
          <div class="col-12 col-md-6">

            <div class="card" >
          
              <div id="carouselExample" class="carousel slide">
                  <div class="carousel-inner">
                    <div class="carousel-item active">
                      <div id="zoom_01" class="zoom-container">
                      <img src="/images/<%= singleProduct.image[0] %>" class="d-block w-100 " style="height: 27rem;" alt="...">
                    </div>
                  </div>
                    <div class="carousel-item">
                      <img src="/images/<%= singleProduct.image[1] %>" class="d-block w-100" style="height: 27rem;" alt="...">
                    </div>
                    <div class="carousel-item">
                      <img src="/images/<%= singleProduct.image[2] %>" class="d-block w-100" style="height: 27rem;"  alt="...">
                    </div>
                  </div>
                  <button class="carousel-control-prev " type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon " aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                  </button>
                  <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                    <span class="carousel-control-next-icon " aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                  </button>
                </div>
          </div>
          </div>



          <div class="col-12 col-md-6">

            <div class="card ">
          
              <div class="card-body">
                <div class="" >
                <h3 class="card-title"><%= singleProduct.title %></h3>
              </div>
              <div class="" style="margin-top: 50px;">
                <h5 class="card-text">Rs. <%= singleProduct.price %></h5>
             </div>
             <div class="" style="margin-top: 50px;">
                <p class="card-text"><%= singleProduct.description %></p>
            </div>
             <div class="" style="margin-top: 150px;">
              <form action="/cart" method="POST">
                <input type="hidden" name="product_id" value="<%= singleProduct._id %>">
                <button type="submit" class="btn btn-dark">ADD TO CART</button>
              </form>
            </div>
              </div>
            </div>

          </div>
          
        </div>
      </div>

     
    </div>

</div>
 


<script>
  $(document).ready(function() {
    $('#zoom_01').zoom({
      url: '/images/<%= singleProduct.image[0] %>',
      touch: true,
      duration: 300,
      magnify: 1.5,
      onZoomIn: function() {
        $('#zoom_01').css('border', '2px solid white');
        $('#zoom_01').css('box-shadow', '0 0 10px white');
      },
      onZoomOut: function() {
        $('#zoom_01').css('border', 'none');
        $('#zoom_01').css('box-shadow', 'none');
      }
    });
  });
</script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-zoom/1.7.21/jquery.zoom.min.js"></script>

<%- include('./partials/footer') %>