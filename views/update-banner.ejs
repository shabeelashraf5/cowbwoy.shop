<%- include('./partials/adminpanel-layout') %>
<main style="margin-top: 58px;">
    <div class="container bg-light" style="width: 100%; height: 600px;"  >

        <section class="vh-100 gradient-custom">
            <div class="container py-5 h-100">
              <div class="row justify-content-center align-items-center h-100">
                <div class="col-12 col-lg-9 col-xl-7">
                  <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                    <div class="card-body p-4 p-md-5">
                      <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">UPDATE PRODUCT</h3>
                      <form action="/admin/banner/update/<%= proDetails._id %>" method="post" enctype="multipart/form-data">
          
                        <div class="row">
                         
                          <div class="col-md-6 mb-4">

                           
                            <% proDetails.image.forEach(image => { %>
                              <img src="/images/<%= image %>" style="width: 50px; height: 50px;" alt="">
                              <a href="/admin/banner/image/delete/<%= proDetails._id %>/<%= image %>" onclick="return confirm('Are you sure to delete');"><i class="fa fa-trash-o text-dark" aria-hidden="true"></i></a>
                              <% }); %>
                          
                         
                              <input type="file" class="form-control-file" id="image" name="image[]" accept="image/jpeg,image/png" multiple>
                          
        
                        </div>
                        </div>
          
                
                        <div class="mt-4 pt-2">
                          <input class="btn btn-dark btn-lg" type="submit" value="Submit" />
                        </div>
          
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </section>
    
      
  

    
    </div>
   
  </main>