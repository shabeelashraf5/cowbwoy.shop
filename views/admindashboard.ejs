  <script>
    const labels = <%- typeof escapedLabels != 'undefined' ? escapedLabels : '' %> ;
    const data =  <%- typeof escapedData != 'undefined' ? escapedData : '' %>
  
    console.log(labels);
    console.log(data);
  
    const pieChart = new Chart(document.getElementById('pieChart'), {
      type: 'pie',
      data: {
        labels: labels,
        datasets: [{
          label: 'My Pie Chart',
          data: data,
          backgroundColor: [
            'rgba(153, 102, 255, 0.2)',
            'rgba(255, 159, 64, 0.2)',
            'rgba(75, 192, 192, 0.2)',
            'rgba(255, 0, 255, 0.2)',
            'rgba(255, 192, 203, 0.2)'
          ],
          borderColor: [
          'rgba(153, 102, 255, 1)' ,
          'rgba(255, 159, 64, 1)',
          'rgba(75, 192, 192, 1)',
          'rgba(255, 0, 255, 1)' ,
          'rgba(255, 192, 203, 1)' 
          ],
          borderWidth: 1
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        title: {
          display: true,
          text: 'My Pie Chart'
        }
      }
    });

  </script>

