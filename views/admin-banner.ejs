<%- include('./partials/adminpanel-layout') %>
<main style="margin-top: 58px;">
    <div class="container bg-light" style="width: 100%; height: 600px;"  >

        <section class="p-md-2 mx-md-2 text-center text-lg-left grey z-depth-1">
            <div class="row d-flex justify-content-center">
              <div class="col-12 col-md-12">
                
                  <div class="mt-3">
                    
                  <a href="/admin/banner/create"><input class="btn btn-dark "  type="button" value="Create" ></a>
                  </div>
          
          <div class="mt-4">
                 <table id="example" class="table table-striped" style="width:100%">
                  <thead class="table-dark">
                      <tr>
                          <th>ID</th>
                          <th>Banner Image</th>
                         
                        
                          <th>Edit</th>
                          <th>Delete</th>
                          
                          
                      </tr>
                  </thead>
                  <tbody>

                   
                    <% bannerDetails.forEach(proddetails =>{%>
                        
                      <tr>
                          <td><%= proddetails._id %></td>
                         
                          <td>  
                            <% proddetails.image.forEach(image => { %>
                            <img src="/images/<%= image %>" style="width: 30rem; height: 8rem;" alt="">
                            <% }); %>
                        
                        </td>
                          

                         
                        
                          <td><a href="/admin/banner/update/<%= proddetails._id %>" class="btn btn-primary " >Edit</a></td>
                          
                          

                            <td> 
                                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
                                  Delete
                                </button>                    
                                 <!-- Modal -->
                                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                  <div class="modal-dialog">
                                    <div class="modal-content">
                                      <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="exampleModalLabel"></h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                      </div>
                                      <div class="modal-body">
                                        Are you sure you want to delete this item ?
                                      </div>
                                      <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                        <a href="/admin/banner/delete/<%= proddetails._id %>"  class="btn btn-danger ">OK</a>
                                      </div>
                                    </div>
                                  </div>
                                </div>
      
      
      
      
                              </td>

                           


                         
                          
                      </tr>

                      <%})%>
                  </tbody>
               
              </table>
                  
          </div>
               </div>   
             
          </div>
          
          </section>

    
    </div>

    <script src="https://cdn.datatables.net/1.13.2/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.2/js/dataTables.bootstrap5.min.js"></script>
    
    <script>
    
     $(document).ready(function () {
        $('#example').DataTable();
    });
    </script>
   
  </main>
