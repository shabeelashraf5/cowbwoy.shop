<section class="vh-100" style="background-color: #747373;">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col col-xl-10">
          <div class="card" style="border-radius: 1rem; background-color: #515050;">
            <div class="row g-0">
              <div class="col-md-6 col-lg-5 d-none d-md-block">
                <img  src="/photos/login-office-dark.c7786a89.jpeg"
                  alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem; height: 90%; " />
                 <div class="mt-2">
                  <a class="navbar-brand fs-4 text-white" href="/">COWBWOY</a>
                </div>
              </div>
              <div class="col-md-6 col-lg-7 d-flex align-items-center">
                <div class="card-body p-4 p-lg-5 text-white">
  
                  <form action="/admin/home" method="post">
  
                    <div class="d-flex align-items-center mb-3 pb-1 ">

                      <span class="h1 fw-bold mb-0 ">ADMIN PANEL</span>
                    </div>
                    <% if(typeof errmessage!== "undefined"){ %>
                      <div class="alert alert-warning text-center" style="height: 50px;" role="alert">
                      <p><%= errmessage %></p>
                    </div>
                      <% } %>

                      <% if(typeof  errpass!== "undefined"){ %>
                        <div class="alert alert-warning text-center" style="height: 50px;" role="alert">
                        <p><%=  errpass %></p>
                      </div>
                        <% } %>
  
                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">LOGIN</h5>
                     
                    <div class="form-outline mb-4">
                      <input type="email" name="email" id="form2Example17" class="form-control form-control-lg" placeholder="Email" />
                      <label class="form-label" for="form2Example17"></label>
                    </div>
  
                    <div class="form-outline mb-4">
                      <input type="password" name="password" id="form2Example27" class="form-control form-control-lg" placeholder="Password" />
                      <label class="form-label" for="form2Example27"></label>
                    </div>
  
                    <div class="pt-1 mb-4">
                      <button class="btn btn-dark btn-lg btn-block" type="submit">Login</button>
                    </div>

                  </form>
  
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>