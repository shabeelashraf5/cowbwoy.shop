<%- include('./partials/adminpanel-layout') %>
<main style="margin-top: 58px;">
    <div class="container bg-light" style="width: 100%; height: 600px;"  >

        <section class="p-md-2 mx-md-2 text-center text-lg-left grey z-depth-1">
            <div class="row d-flex justify-content-center">
              <div class="col-12 col-md-12">
                
                  <div class="mt-3">
                    
                  
                  </div>
          
          <div class="mt-4">
                 <table id="example" class="table table-striped" style="width:100%">
                  <thead class="table-dark">
                      <tr>
                          <th>Image</th>
                          <th>Product Name</th>
                          <th>Category</th>
                          <th>Unit Price</th>
                          <th>Quantity</th>
                         
                          
                      </tr>
                  </thead>
                  <tbody>

                    
                    <% orderItems.forEach(function(item) { %>
                        <tr>
                          <td><img src="/images/<%= item.image %>" style="width: 100px; height: 100px;"></td>
                          <td><%= item.productName %></td>
                          <td><%= item.category %></td>
                          <td><%= item.unitPrice %></td>
                          <td><%= item.quantity %></td>
                        </tr>
                      <% }); %>

                  
                  </tbody>
               
              </table>
                  
          </div>
               </div>   
             
          </div>
          
          </section>

    
    </div>

    <script src="https://cdn.datatables.net/1.13.2/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.2/js/dataTables.bootstrap5.min.js"></script>
    
    <script>
    
     $(document).ready(function () {
        $('#example').DataTable();
    });
    </script>
   
  </main>