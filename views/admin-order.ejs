<%- include('./partials/adminpanel-layout') %>
<main style="margin-top: 58px;">
    <div class="container bg-light" style="width: 100%; height: 600px;"  >

        <section class="p-md-2 mx-md-2 text-center text-lg-left grey z-depth-1">
            <div class="row d-flex justify-content-center">
              <div class="col-12 col-md-12">
                
                  <div class="mt-3">
                    
                  
                  </div>
          
          <div class="mt-4">
                 <table id="example" class="table table-striped" style="width:100%">
                  <thead class="table-dark">
                      <tr>
                          <th>Ordered ID</th>
                          <th>Delivery Address</th>
                          <th>Ordered Date</th>
                          <th>Payment Method</th>
                          <th>Total Price</th>
                          <th>Status</th>
                          <th>Action</th>
                      </tr>
                  </thead>
                  <tbody>

                    
                    <% orderDetails.forEach(odetails => { %>
                      <tr>
                          <td><%= odetails._id %></td>
                          <td>
                            <%= odetails.address_id.address[0].fname %> <%= odetails.address_id.address[0].lname %><br>
                            <%= odetails.address_id.address[0].address %><br>
                            <%= odetails.address_id.address[0].city %>, <%= odetails.address_id.address[0].state %><br>
                            <%= odetails.address_id.address[0].country %><br>
                            <%= odetails.address_id.address[0].phone %></td>
                          <td><%= odetails.createdAt %></td>
                          <td><%= odetails.payment_method %></td>
                          <td><%= odetails.total %></td>
                          <td><%= odetails.status %> </td>
                          <td><a href="/admin/order-action/<%= odetails._id %>" class="btn btn-primary " >Details</a></td>
                      </tr>

                      <% }) %>
                    
                  </tbody>
               
              </table>
                  
          </div>
               </div>   
             
          </div>
          
          </section>

    
    </div>

    <script src="https://cdn.datatables.net/1.13.2/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.2/js/dataTables.bootstrap5.min.js"></script>
    
    <script>
    
     $(document).ready(function () {
        $('#example').DataTable();
    });
    </script>
   
  </main>