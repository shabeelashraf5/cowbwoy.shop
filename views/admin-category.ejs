<%- include('./partials/adminpanel-layout') %>
<main style="margin-top: 58px;">
    <div class="container bg-light" style="width: 100%; height: 600px;"  >

        <section class="p-md-2 mx-md-2 text-center text-lg-left grey z-depth-1">
            <div class="row d-flex justify-content-center">
              <div class="col-12 col-md-12">
                
                  <div class="mt-3">
                    
                  <a href="/admin/category/create"><input class="btn btn-dark "  type="button" value="Create" ></a>
                  </div>
          
          <div class="mt-4">
                 <table id="example" class="table table-striped" style="width:100%">
                  <thead class="table-dark">
                      <tr>
                          <th>ID</th>
                          <th>Category</th>
                          <th>Edit</th>
                          <th>Delete</th>
                          
                          
                      </tr>
                  </thead>
                  <tbody>

                   
                    <% catDetails.forEach(catdetails =>{%>
                        
                      <tr>
                          <td><%= catdetails._id %></td>
                          <td><%= catdetails.title %></td>
                          <td><a href="/admin/category/update/<%= catdetails._id %>" class="btn btn-primary " >Edit</a></td>
                          
                          

                            <td> 
                              <form action="/admin/category/<%= catdetails._id %>/active" method="post">
                                <button type="submit" name="active" class="btn btn-success" value="<%= !catdetails.active %>">
                                  <%= catdetails.active ? 'Deactivate' : 'Activate' %> 
                                </button>
                              </form>
      
      
      
      
                              </td>



                          
                      </tr>

                      <%})%>
                    
                  </tbody>
               
              </table>
                  
          </div>
               </div>   
             
          </div>
          
          </section>

    
    </div>

    <script src="https://cdn.datatables.net/1.13.2/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.2/js/dataTables.bootstrap5.min.js"></script>
    
    <script>
    
     $(document).ready(function () {
        $('#example').DataTable();
    });
    </script>
   
  </main>
